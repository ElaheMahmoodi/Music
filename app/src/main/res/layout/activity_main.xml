<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainPic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20px"
                app:srcCompat="@drawable/zanco" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_margin="20px"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMasalan"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/masalan" />

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMasalan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="Masalan"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/PauseMasalan"
                            android:layout_width="5dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pause" />

                        <ImageView
                            android:id="@+id/PlayMasalan"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/play" />

                        <ImageView
                            android:id="@+id/StopMasalan"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/stop" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_margin="20px"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBoro"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/borosamteali" />

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtBoro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="Boro samte Ali"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/PauseBoro"
                            android:layout_width="5dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pause" />

                        <ImageView
                            android:id="@+id/PlayBoro"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/play" />

                        <ImageView
                            android:id="@+id/StopBoro"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/stop" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_margin="20px"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgRadPa"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/radepa" />

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRadPa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="Rade pa"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/PauseRadPa"
                            android:layout_width="5dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pause" />

                        <ImageView
                            android:id="@+id/PlayRadPa"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/play" />

                        <ImageView
                            android:id="@+id/StopRadPa"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/stop" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_margin="20px"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgKhoshamMiad"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/khoshammiad" />

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtKhoshamMiad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:text="Khosham miad"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/PauseKhoshamMiad"
                            android:layout_width="5dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/pause" />

                        <ImageView
                            android:id="@+id/PlayKhoshamMiad"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/play" />

                        <ImageView
                            android:id="@+id/StopKhoshamMiad"
                            android:layout_width="5dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/stop" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>